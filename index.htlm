<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Acc Pro - ShrinkMe Auto</title>
    <!-- React & Tailwind -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Firebase SDK -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
        import { getAuth } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";
        import { getFirestore, doc, getDoc, setDoc, updateDoc, collection, query, where, getDocs, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";

        // --- C·∫§U H√åNH FIREBASE CH√çNH CH·ª¶ C·ª¶A B·∫†N ---
        const firebaseConfig = {
          apiKey: "AIzaSyDezi1m5b3nuINUDYFRAeuWrTWU9Wsg-ww",
          authDomain: "freeshop-1a344.firebaseapp.com",
          projectId: "freeshop-1a344",
          storageBucket: "freeshop-1a344.firebasestorage.app",
          messagingSenderId: "181657632424",
          appId: "1:181657632424:web:ba62630798bf7ac3614c9d"
        };
        // ---------------------------------------------

        const app = initializeApp(firebaseConfig);
        window.db = getFirestore(app);
        window.auth = getAuth(app);
        window.fs = { doc, getDoc, setDoc, updateDoc, collection, query, where, getDocs, serverTimestamp };
    </script>
    <style>
        body { background-color: #111827; color: #f3f4f6; }
        .glass { background: rgba(31, 41, 55, 0.7); backdrop-filter: blur(10px); border: 1px solid rgba(75, 85, 99, 0.4); }
        .btn-primary { background: linear-gradient(to right, #06b6d4, #3b82f6); color: white; font-weight: bold; }
        @keyframes pulse-glow { 0%, 100% { box-shadow: 0 0 10px #eab308; } 50% { box-shadow: 0 0 20px #facc15; } }
        .glow-effect { animation: pulse-glow 2s infinite; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;
        const APP_ID = 'freeshop-main'; // ID ƒë·ªãnh danh ·ª©ng d·ª•ng

        // --- C·∫§U H√åNH SHRINKME.IO ---
        const SHORTENER_API_URL = "https://shrinkme.io/api"; 
        const SHORTENER_API_TOKEN = "a16ba54df502d11a43d8e2b10f2d2fbb9b8e29f7"; 
        
        // --- QUAN TR·ªåNG: S·ª¨A LINK N√ÄY SAU KHI DEPLOY L√äN VERCEL ---
        // V√≠ d·ª•: https://shop-acc-cuatoi.vercel.app/verify.html
        const MY_VERIFY_PAGE = "https://TEN_APP_TREN_VERCEL.vercel.app/verify.html"; 
        // ----------------------------------------------------------

        // Component Modal Th√¥ng B√°o (Thay th·∫ø alert)
        const Notification = ({ msg, type, onClose }) => {
            if (!msg) return null;
            const colors = type === 'success' ? 'border-green-500 text-green-400' : 'border-red-500 text-red-400';
            return (
                <div className="fixed top-4 left-1/2 -translate-x-1/2 z-[60] animate-bounce-in">
                    <div className={`bg-gray-800 border ${colors} px-6 py-3 rounded-xl shadow-2xl flex items-center gap-3`}>
                        <span className="font-bold">{msg}</span>
                        <button onClick={onClose} className="text-gray-500 hover:text-white">‚úï</button>
                    </div>
                </div>
            );
        };

        const ShopApp = () => {
            const [user, setUser] = useState(null);
            const [products, setProducts] = useState([]);
            const [notification, setNotification] = useState({ msg: '', type: '' });
            
            // State x·ª≠ l√Ω link
            const [loadingLink, setLoadingLink] = useState(false);
            const [shortenedLink, setShortenedLink] = useState('');
            const [inputCode, setInputCode] = useState('');
            const [currentProduct, setCurrentProduct] = useState(null);

            const notify = (msg, type = 'success') => {
                setNotification({ msg, type });
                setTimeout(() => setNotification({ msg: '', type: '' }), 4000);
            };

            useEffect(() => {
                window.auth.onAuthStateChanged(setUser);
                const fetch = async () => {
                    const q = window.fs.query(
                        window.fs.collection(window.db, 'artifacts', APP_ID, 'public', 'data', 'products'),
                        window.fs.where('type', '==', 'free')
                    );
                    const snap = await window.fs.getDocs(q);
                    setProducts(snap.docs.map(d => ({id: d.id, ...d.data()})));
                };
                fetch();
            }, []);

            const generateLink = async (product) => {
                if(!user) return notify("Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ l·∫•y m√£!", "error");
                
                setLoadingLink(true);
                setShortenedLink('');
                setInputCode('');
                setCurrentProduct(product);

                try {
                    // 1. T·∫°o Session ID & M√£ Code ng·∫´u nhi√™n
                    const randomCode = Math.floor(100000 + Math.random() * 900000).toString();
                    const sessionId = "sess_" + Date.now() + "_" + Math.random().toString(36).substr(2, 6);

                    // 2. L∆∞u Session l√™n Firebase
                    await window.fs.setDoc(window.fs.doc(window.db, 'artifacts', APP_ID, 'public', 'data', 'sessions', sessionId), {
                        code: randomCode,
                        isUsed: false,
                        productId: product.id,
                        userId: user.uid,
                        createdAt: window.fs.serverTimestamp()
                    });

                    // 3. T·∫°o link g·ªëc
                    if (MY_VERIFY_PAGE.includes("TEN_APP_TREN_VERCEL")) {
                        throw new Error("B·∫°n ch∆∞a s·ª≠a MY_VERIFY_PAGE trong code!");
                    }
                    const longUrl = `${MY_VERIFY_PAGE}?session=${sessionId}`;
                    
                    // 4. G·ªçi API ShrinkMe.io
                    // ShrinkMe d√πng tham s·ªë &format=json ƒë·ªÉ tr·∫£ v·ªÅ JSON
                    const apiEndpoint = `${SHORTENER_API_URL}?api=${SHORTENER_API_TOKEN}&url=${encodeURIComponent(longUrl)}&format=json`;
                    
                    const res = await fetch(apiEndpoint);
                    const data = await res.json();

                    if (data.status === 'success' && data.shortenedUrl) {
                        setShortenedLink(data.shortenedUrl);
                    } else {
                        console.error("API Error:", data);
                        throw new Error("Kh√¥ng th·ªÉ r√∫t g·ªçn link. Ki·ªÉm tra l·∫°i API Token.");
                    }

                } catch (e) {
                    console.error(e);
                    notify(e.message, "error");
                } finally {
                    setLoadingLink(false);
                }
            };

            const verifyAndUnlock = async () => {
                if(!currentProduct || !inputCode) return notify("Vui l√≤ng nh·∫≠p m√£!", "error");

                try {
                    const q = window.fs.query(
                        window.fs.collection(window.db, 'artifacts', APP_ID, 'public', 'data', 'sessions'),
                        window.fs.where('code', '==', inputCode.trim()),
                        window.fs.where('isUsed', '==', false)
                    );
                    
                    const snap = await window.fs.getDocs(q);
                    
                    if(snap.empty) return notify("M√£ sai ho·∫∑c ƒë√£ ƒë∆∞·ª£c s·ª≠ d·ª•ng!", "error");

                    const sessionDoc = snap.docs[0];
                    const sessionData = sessionDoc.data();

                    if(sessionData.productId !== currentProduct.id) return notify("M√£ n√†y l√† c·ªßa s·∫£n ph·∫©m kh√°c!", "error");

                    // ƒê√°nh d·∫•u ƒë√£ d√πng
                    await window.fs.updateDoc(sessionDoc.ref, {
                        isUsed: true,
                        usedAt: window.fs.serverTimestamp()
                    });

                    // Hi·ªán th√¥ng tin acc
                    alert(`‚úÖ X√ÅC TH·ª∞C TH√ÄNH C√îNG!\n\nUser: ${currentProduct.accountData.user}\nPass: ${currentProduct.accountData.pass}\n2FA: ${currentProduct.accountData.twoFa || 'Kh√¥ng'}`);
                    
                    // Reset
                    setShortenedLink(''); setInputCode(''); setCurrentProduct(null);

                } catch (e) { notify("L·ªói verify: " + e.message, "error"); }
            };

            return (
                <div className="max-w-md mx-auto min-h-screen bg-gray-900 pb-10 shadow-2xl">
                    <Notification msg={notification.msg} type={notification.type} onClose={() => setNotification({msg:'', type:''})} />
                    
                    <div className="p-4 glass sticky top-0 z-50 flex justify-between items-center">
                        <h1 className="font-bold text-xl text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">SHOP AUTO</h1>
                        {user ? (
                            <button onClick={()=>window.auth.signOut()} className="text-xs text-gray-400">Logout</button>
                        ) : (
                             <button className="bg-cyan-600 px-3 py-1 rounded text-xs font-bold text-white">Login</button>
                        )}
                    </div>

                    <div className="p-4 space-y-4">
                        {products.map(p => (
                            <div key={p.id} className="glass p-4 rounded-xl hover:border-cyan-500/30 transition">
                                <div className="flex justify-between items-center mb-4">
                                    <h3 className="font-bold text-lg text-white">{p.appName}</h3>
                                    <span className="bg-green-500/20 text-green-400 text-[10px] px-2 py-0.5 rounded font-bold">SHRINKME AUTO</span>
                                </div>

                                {currentProduct?.id === p.id && shortenedLink ? (
                                    <div className="bg-gray-800 p-4 rounded border border-yellow-500/50 glow-effect">
                                        <p className="text-yellow-400 text-center text-xs font-bold mb-2 uppercase">‚ö†Ô∏è V∆∞·ª£t link ShrinkMe ƒë·ªÉ l·∫•y m√£</p>
                                        <a href={shortenedLink} target="_blank" className="block w-full bg-yellow-500 text-black text-center font-bold py-2 rounded mb-4 hover:bg-yellow-400">üëâ B·∫§M V√ÄO ƒê√ÇY L·∫§Y M√É</a>
                                        
                                        <div className="flex gap-2">
                                            <input className="flex-1 bg-black border border-gray-600 rounded px-3 text-center tracking-widest text-white" placeholder="......" value={inputCode} onChange={e=>setInputCode(e.target.value)} />
                                            <button onClick={verifyAndUnlock} className="bg-green-600 px-4 rounded font-bold text-white">OK</button>
                                        </div>
                                    </div>
                                ) : (
                                    <button 
                                        onClick={() => generateLink(p)} 
                                        disabled={loadingLink}
                                        className="w-full btn-primary py-2 rounded font-bold text-white disabled:opacity-50"
                                    >
                                        {loadingLink && currentProduct?.id === p.id ? "ƒêang t·∫°o link..." : "L·∫§Y M√É & NH·∫¨N ACC"}
                                    </button>
                                )}
                            </div>
                        ))}
                        {products.length === 0 && <p className="text-center text-gray-500">ƒêang t·∫£i danh s√°ch...</p>}
                    </div>
                </div>
            );
        };
        ReactDOM.createRoot(document.getElementById('root')).render(<ShopApp />);
    </script>
</body>
</html>


